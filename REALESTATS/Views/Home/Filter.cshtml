
@{
    ViewBag.Title = "Filter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">



    <!-- Products tab & slick -->
    <div class="col-md-12">
        <div class="row">
            <div class="products-tabs">
                <!-- tab -->
                <div id="tab2" class="tab-pane fade in active">
                    <div class="products-slick" data-nav="#slick-nav-1">
                        @if (Model != null)
                        {
                            foreach (var o in Model)
                            {

                                <!-- product -->
                                <div class="product">
                                    <div class="product-img">
                                        <img src="@o.cheminPhotoPrincipale" height="150" class="img-responsive">
                                        <div class="product-label">
                                            @*<span class="sale">-30%</span>*@
                                            @*   @if(o.added_at.Equals( DateTime.Now)){*@
                                            <span class="new">@o.added_at</span>
                                            @*   }*@
                                        </div>
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@o.libelle_type_realestat</p>
                                        <h3 class="product-name"><a href="#">@o.libelle_realestat</a></h3>
                                        <h4 class="product-price">
                                            @o.price

                                            @*<del class="product-old-price">@o.price</del>*@


                                        </h4>
                                        @*<div class="product-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>*@
                                        <div class="product-btns">
                                            @*<button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                                <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
                                                <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>*@
                                        </div>
                                    </div>
                                    <div class="add-to-cart">
                                        <a class="add-to-cart-btn" href="/Home/Details?id_realestat=@o.id_realestat"><span class="fa fa-eye"></span> @Resource.DetailsAction </a>
                                    </div>
                                </div>
                                <!-- /product -->
                            }

                        }

                    </div>

                    <div id="slick-nav-1" class="products-slick-nav" style="background: #4c7690;"></div>

                </div>
                <!-- /tab -->
            </div>
        </div>
    </div>
    <!-- /Products tab & slick -->

</div>

<hr />
